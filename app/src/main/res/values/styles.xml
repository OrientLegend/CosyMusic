<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bold_text_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="default_bottom_sheet_dialog">
        <item name="android:background">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="bottom_dialog_animation">
        <item name="android:windowEnterAnimation">@anim/anim_slide_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_bottom_exit</item>
    </style>

    <style name="player_activity_animation">
        <item name="android:activityOpenEnterAnimation">@anim/anim_slide_bottom_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_no_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_no_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_slide_bottom_exit</item>
    </style>

</resources>